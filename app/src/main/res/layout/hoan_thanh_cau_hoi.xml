<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:textColor="#FF0202"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Chúc mừng bạn đã hoàn thành tất cả các câu hỏi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cup"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/cup" />

        <TextView
            android:id="@+id/txtdiemhoanthanh"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/cup"
            android:text="10"
            android:textColor="#FF0202"
            android:textSize="60sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgchucmung"
        android:src="@drawable/chucmung"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnlamlai"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:layout_weight="1"
            android:text="Làm lại"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:id="@+id/btnquaylai"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Quay lại"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>